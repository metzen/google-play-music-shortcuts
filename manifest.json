{
  "manifest_version": 2,

  "name": "Keyboard shortcuts for Google Play Music",
  "description": "Keyboard shortcuts for Google Play Music.",
  "version": "1.0",

  "permissions": [
    "https://play.google.com/music/*",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "playPause": {
      "description": "Play or pause music",
      "suggested_key": "Alt+Shift+P"
    },
    "goToNextSong???": {
      "description": "Go to the next song",
      "suggested_key": "Alt+Shift+J"
    },
    "prevSong": {
      "description": "Go to the previous song",
      "suggested_key": "Alt+Shift+K"
    }
  }
}
